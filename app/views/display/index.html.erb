<% if notice %>
  <p id='notice'><%= notice%></p>
<% end %>

<h1>Fresh Blogs</h1>
<p><%= will_paginate @posts %></p>
<% @posts.each do |post| %>
  <div class="entry">
    <h3><%= post.title %></h3>
    <b>By:</b><u><%= post.user.name %></u><br />
    Created On:<u><%= post.created_at %></u><br />
    <%= sanitize(post.content) %>
  </div>
<% end %>
