<p>
  WELCOME
  <b><u><%= @user.name %></u></b>
</p>

<p>
  <b>Your Articles</b>
  <% @user.posts.each do |post| %>
    <div class="entry">
      <h3><%= post.title %></h3>
      <%= link_to 'Edit', edit_post_path(post) %> |
      <%= link_to 'Delete', post, 
                  :confirm => 'Are you sure?', 
                  :method => :delete %>
      <%= sanitize(post.content) %>
    </div>
  <% end %>
</p>


<%= link_to 'Edit My Profile', edit_user_path(@user) %> | <%= link_to 'Add New Post', new_post_path %>
